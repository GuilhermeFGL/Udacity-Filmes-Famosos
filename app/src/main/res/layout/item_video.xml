<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="104dp"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/item_video_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        tool:src="@mipmap/youtube_thumbnail_background"
        android:contentDescription="@string/item_details_trailer_thumbnail" />

    <TextView
        android:id="@+id/item_video_title"
        android:layout_below="@+id/item_video_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:textSize="13sp"
        android:textStyle="italic"
        android:textColor="@color/secondary_text"
        tool:text="Trailer #N"/>

</RelativeLayout>